#!/bin/bash
# Start emacsclient
function is_osx () {
    [[ "$OSTYPE" =~ ^darwin ]] || return 1
}

if is_osx; then
    /Applications/Emacs.app/Contents/MacOS/bin/emacsclient "$@"
elif [[ -x /usr/bin/emacsclient ]]; then
    /usr/bin/emacsclient -a '' "$@"
elif [[ -x /c/ProgramData/chocolatey/bin/emacsclientw ]]; then
    /c/ProgramData/chocolatey/bin/emacsclientw -a '' "$@"
elif [[ -x /c/ProgramData/chocolatey/bin/emacsclient ]]; then
    /c/ProgramData/chocolatey/bin/emacsclient -a '' "$@"
fi
