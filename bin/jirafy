#!/usr/bin/env bash

die() {
    if [[ $# -gt 0 ]]; then
        >&2 echo "$*"
    fi

    exit 1
}

script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
jirafyfile_bin="${script_dir}/jirafyfile"

if [[ $# -lt 1 ]]; then
    die  "Usage: jirafy FILE [FILE2, ...]"
fi

for file in "$@"; do
    if [[ ! -f "$file" ]]; then
        die "Could not locate file '$file'"
    fi

    "$jirafyfile_bin" "$file" > "${file%.*}.txt"
done
