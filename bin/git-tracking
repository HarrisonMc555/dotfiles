#!/usr/bin/env bash

{
    while read -r branch; do
        if upstream=$(git rev-parse --abbrev-ref "$branch@{upstream}" 2>/dev/null); then
            echo "${branch} ${upstream}"
        fi
    done < <(git for-each-ref --format='%(refname:short)' refs/heads/**) |
        sort |
        column -t
} | less -S
